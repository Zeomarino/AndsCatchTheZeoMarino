            app:layout_row="1"
            app:srcCompat="@drawable/catchthezeomarino" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="increaseScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/catchthezeomarino" />

        <ImageView
            android:id="@+id/imageView7"
